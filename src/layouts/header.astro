 <section class="hero">
  <nav class="nav">
    <slot/>
  </nav>
  <div class="website-name">
    <a class="navigation">@tstfie</a>
    <div class="secondary-nav">
      <div class="interaction-wrapper">
        <div class="large-breakpoint-only">|</div>
        <a href="/about" class="navigation">about</a>
        <a href="/signup" class="navigation">sign up</a>
        <a href="/contact" class="navigation">contact</a>
        <a href="/music" class="navigation">music</a>
      </div>
    </div>
  </div>
 </section>
 <script is:inline>
  document.addEventListener('DOMContentLoaded', () => {
  const websiteNameDiv = document.querySelector('.website-name');
  const secondaryNav = document.querySelector('.secondary-nav');
  let timer;

  // Desktop hover functionality
  websiteNameDiv.addEventListener('mouseenter', () => {
    clearTimeout(timer); // Clear the timeout if the user hovers quickly
    secondaryNav.style.display = 'block';
  });

  websiteNameDiv.addEventListener('mouseleave', () => {
    timer = setTimeout(() => {
      secondaryNav.style.display = 'none';
    }, 400); // Hide the secondary nav after 0.4 seconds
  });

  // Mobile tap functionality
  websiteNameDiv.addEventListener('click', (event) => {
    event.stopPropagation(); // Prevent event from propagating to document
    if (secondaryNav.style.display === 'block') {
      secondaryNav.style.display = 'none'; // Hide if already open
    } else {
      secondaryNav.style.display = 'block'; // Show if not open
    }
  });

  // Close secondary nav when clicking outside of the website-name div
  document.addEventListener('click', () => {
    secondaryNav.style.display = 'none';
  });

  // Prevent click event from propagating to the document when clicking inside the website-name div
  websiteNameDiv.addEventListener('click', (event) => {
    event.stopPropagation();
  });
});
 </script>